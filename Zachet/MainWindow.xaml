<Window x:Class="Zachet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zachet — Складской учёт" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Background="#f0f0f0">
            <Button Content="Главная" Click="GoToDashboard" Margin="5" Padding="8,4"/>
            <Button Content="Товары" Click="GoToProducts" Margin="5" Padding="8,4"/>
            <Button Content="Склады" Click="GoToWarehouses" Margin="5" Padding="8,4"/>
            <Button Content="Ячейки" Click="GoToLocations" Margin="5" Padding="8,4"/>
            <Button Content="Приёмка" Click="GoToReceiving" Margin="5" Padding="8,4"/>
            <Button Content="Перемещение" Click="GoToMovements" Margin="5" Padding="8,4"/>
            <Button Content="Сборка" Click="GoToPicking" Margin="5" Padding="8,4"/>
        </StackPanel>

        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>