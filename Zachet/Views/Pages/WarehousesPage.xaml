<Page x:Class="Zachet.Views.Pages.WarehousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Склады">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Склады" FontSize="20" FontWeight="Bold"/>
            <Button Content="Добавить" Click="Add_Click" Margin="15,0,0,0" Padding="8,4"/>
        </StackPanel>
        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</Page>