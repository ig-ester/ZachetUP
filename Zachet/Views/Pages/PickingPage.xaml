<Page x:Class="Zachet.Views.Pages.PickingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сборка заказа">
    <ScrollViewer>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Создание заказа и сборка" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <Label Content="Клиент"/>
                <TextBox x:Name="CustomerBox" Text="ООО Ромашка" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,10">
                <Label Content="Товар"/>
                <ComboBox x:Name="ProductCombo" DisplayMemberPath="Name" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,10">
                <Label Content="Количество"/>
                <TextBox x:Name="QtyBox" Text="1" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,20">
                <Button Content="Добавить позицию" Click="AddItem_Click" Width="140" Height="30" Margin="0,0,0,10"/>
                <DataGrid x:Name="ItemsGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="150">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="200"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding QuantityRequested}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,20">
                <Button Content="Создать заказ и начать сборку" Click="CreateOrder_Click" Width="220" Height="32"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>