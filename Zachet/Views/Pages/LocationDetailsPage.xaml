<Page x:Class="Zachet.Views.Pages.LocationDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Содержимое ячейки">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TitleText" Text="Содержимое" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="200"/>
                <DataGridTextColumn Header="SKU" Binding="{Binding Product.SKU}" Width="120"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Зарезервировано" Binding="{Binding Reserved}" Width="100"/>
                <DataGridTextColumn Header="Партия" Binding="{Binding BatchNumber}" Width="100"/>
                <DataGridTextColumn Header="Срок годн." Binding="{Binding ExpiryDate, StringFormat=d}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>