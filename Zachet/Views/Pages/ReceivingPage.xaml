<Page x:Class="Zachet.Views.Pages.ReceivingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приёмка товара">
    <ScrollViewer>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Приёмка товара" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <Label Content="Товар"/>
                <ComboBox x:Name="ProductCombo" DisplayMemberPath="Name" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,10">
                <Label Content="Количество"/>
                <TextBox x:Name="QtyBox" Text="1" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,10">
                <Label Content="Целевая ячейка"/>
                <ComboBox x:Name="LocationCombo" DisplayMemberPath="Code" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,10">
                <Label Content="Номер партии (опционально)"/>
                <TextBox x:Name="BatchBox" Height="26"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,10">
                <Label Content="Срок годности (дд.мм.гггг, опционально)"/>
                <TextBox x:Name="ExpiryBox" Height="26" Text="31.12.2025"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,20">
                <Button Content="Принять товар" Click="Receive_Click" Width="140" Height="32"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>