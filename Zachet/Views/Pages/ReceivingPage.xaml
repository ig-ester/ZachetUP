<Page x:Class="Zachet.Views.Pages.ReceivingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Приёмка товара">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Приёмка товаров" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>
        <DataGrid x:Name="ProductsGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Выбрать" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Product.SKU}" Width="120"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Product.Name}" Width="200"/>
                <DataGridTextColumn Header="Вес/ед." Binding="{Binding Product.WeightKg}" Width="80"/>
                <DataGridTextColumn Header="Объём/ед." Binding="{Binding Product.VolumeM3}" Width="100"/>
                <DataGridTemplateColumn Header="Кол-во" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Ячейка" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.AllLocations, RelativeSource={RelativeSource AncestorType=Page}}"
                                      SelectedItem="{Binding SelectedLocation}"
                                      DisplayMemberPath="Code"
                                      IsEnabled="{Binding IsSelected}"
                                      Width="160"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15">
            <Button Content="Принять" Click="AcceptReceiving_Click" Width="100" Height="30"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80" Height="30" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>