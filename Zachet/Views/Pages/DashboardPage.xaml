<Page x:Class="Zachet.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная" Loaded="Page_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Сводка остатков на складах" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

        <DataGrid x:Name="InventoryGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Склад" Binding="{Binding WarehouseName}" Width="150"/>
                <DataGridTextColumn Header="Ячейка" Binding="{Binding LocationCode}" Width="100"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="100"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding TotalQuantity}" Width="80"/>
                <DataGridTextColumn Header="Вес (кг)" Binding="{Binding TotalWeight, StringFormat=F2}" Width="100"/>
                <DataGridTextColumn Header="Объём (м³)" Binding="{Binding TotalVolume, StringFormat=F3}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>