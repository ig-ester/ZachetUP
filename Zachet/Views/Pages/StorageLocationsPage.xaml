<Page x:Class="Zachet.Views.Pages.StorageLocationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Места хранения">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Места хранения" FontSize="20" FontWeight="Bold"/>
            <Button Content="Добавить" Click="Add_Click" Margin="15,0,0,0" Padding="8,4"/>
        </StackPanel>
        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="Grid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding LocationId}" Width="50"/>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Склад" Binding="{Binding Warehouse.Name}" Width="150"/>
                <DataGridTextColumn Header="Макс. вес (кг)" Binding="{Binding MaxWeightKg}" Width="120"/>
                <DataGridTextColumn Header="Макс. объём (м³)" Binding="{Binding MaxVolumeM3}" Width="130"/>
                <DataGridCheckBoxColumn Header="Доступна" Binding="{Binding IsAvailable}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>