<Page x:Class="Zachet.Views.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Товары">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Товары" FontSize="20" FontWeight="Bold"/>
            <Button Content="Добавить" Click="AddProduct_Click" Margin="15,0,0,0" Padding="8,4"/>
        </StackPanel>
        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Вес (кг)" Binding="{Binding WeightKg}" Width="80"/>
                <DataGridTextColumn Header="Объём (м³)" Binding="{Binding VolumeM3}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>